<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:vm="using:Monetria.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Monetria.Views.TransacaoPageView"
             x:DataType="vm:TransacaoPageViewModel"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia" >
    

     
    <StackPanel Spacing="10" Margin="10" Orientation="Vertical">
    <TextBlock Text="Bem vindo a aba de transações!" FontSize="20" FontWeight="Bold"></TextBlock>
    <TextBox BorderThickness="0" TextWrapping="Wrap"> Avatar controls are used to represent people or objects. They can render a full-size image, a centered glyph, a person's initials, or text.
    </TextBox>
        <actipro:Avatar Description="Zé Ninguém" Height="50"> </actipro:Avatar>
    
        <Grid ColumnDefinitions="140,*">
            
            <Button Grid.Column="0">
                    + Nova Transação
                </Button>
                
                <Button Grid.Column="1">
                     Exportar CSV
                </Button>
            
        </Grid>
        
        <Grid ColumnDefinitions="140,*,140,*,140,*">
            
            <SplitButton Grid.Column="0" Content="Mês" >
            <SplitButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuItem Header="Janeiro"/>
                    <MenuItem Header="Fevereiro"/>
                    <MenuItem Header="Março"/>
                    <MenuItem Header="Abril"/>
                    <MenuItem Header="Maio"/>
                    <MenuItem Header="Junho"/>
                    <MenuItem Header="Julho"/>
                    <MenuItem Header="Setembro"/>
                    <MenuItem Header="Outubro"/>
                    <MenuItem Header="Novembro"/>
                    <MenuItem Header="Dezembro"/>
                </MenuFlyout>
            </SplitButton.Flyout>
        </SplitButton>
            
            <SplitButton Grid.Column="1" Content="Tipo" >
                <SplitButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuItem Header="Janeiro"/>
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
            
            <SplitButton Grid.Column="2" Content="Categoria" >
                <SplitButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuItem Header="Janeiro"/>
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>

            
        </Grid>
        
        <Grid>
            <DataGrid Margin="20" ItemsSource="{Binding Transacoes}" AutoGenerateColumns="True"
                      IsReadOnly="True" GridLinesVisibility="All" BorderThickness="1" BorderBrush="Chartreuse"
                      CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserSortColumns="True" >
                <DataGrid.Columns>
                    
                    <DataGridTextColumn Header="Data" Binding="{Binding Data}"></DataGridTextColumn>

                </DataGrid.Columns>
                
                
            </DataGrid>
            
        </Grid>
    </StackPanel>
    
</UserControl>
