<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Monetria.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Monetria.Views.RelatorioPageView"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:DataType="vm:RelatorioPageViewModel">
    
    <ScrollViewer>
    <StackPanel Spacing="10" Margin="10" Orientation="Vertical">
    <TextBlock Text="Bem vindo a aba de categorias!" FontSize="20" FontWeight="Bold"></TextBlock>
    <Grid></Grid>
       <TextBlock>Filtros:</TextBlock>
        
        <Grid ColumnDefinitions="120,*,Auto,*">
        <SplitButton  Grid.Column="0" Content="Mês" >
            <SplitButton.Flyout>
                <MenuFlyout Placement="Bottom">
                </MenuFlyout>
            </SplitButton.Flyout>
        </SplitButton>
        
            <SplitButton  Grid.Column="1" Content="Ano" >
                <SplitButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
        </Grid>
        
        <Grid ColumnDefinitions="*,*"
              ColumnSpacing="16">

            <Border Padding="10" CornerRadius="6" Height="440">
                <lvc:PieChart Series="{Binding }" />
            </Border>

            <Border Padding="10" CornerRadius="6 " Height="440"
                    Grid.Column="1">
                <lvc:CartesianChart Series="{Binding }" />
            </Border>
        </Grid>

        <TextBlock> Evolução mensal do saldo</TextBlock>
        <lvc:CartesianChart
            Grid.Row="2" Height="450" Padding="10" CornerRadius="6 "  HorizontalAlignment="Stretch"
            Series="{Binding }"
            XAxes="{Binding }" />
        
</StackPanel>
    </ScrollViewer>
</UserControl>
