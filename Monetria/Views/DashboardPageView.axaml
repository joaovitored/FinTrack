<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Monetria.Views.DashboardPageView"
             xmlns:vms="using:Monetria.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:DataType="vms:DashboardPageViewModel">
    
  
    <ScrollViewer>
    <StackPanel Spacing="10" Margin="10" Orientation="Vertical">
        <TextBlock Text="Bem vindo ao Dashboard!" FontSize="20" FontWeight="Bold"></TextBlock>
        <TextBox BorderThickness="0" TextWrapping="Wrap" > ASDKAKLDKALJDKLAJDLKAJDK</TextBox>

        
        <Grid RowDefinitions="Auto,*,*,*"
              Margin="10"
              RowSpacing="10">
            
            <!-- Gráfico de Pizza (em cima) -->
            <lvc:PieChart
                Grid.Row="1" Height="420" 
                Series="{Binding PieData.Series}"
                LegendPosition="Left"
                />
    
            <!-- Gráfico DateTime (embaixo) -->
            <lvc:CartesianChart
                Grid.Row="2" Height="450"   HorizontalAlignment="Stretch"
                Series="{Binding DateTimeChart.Series}"
                XAxes="{Binding DateTimeChart.XAxes}" />

            
        </Grid>
    </StackPanel>
    </ScrollViewer>

</UserControl>
