<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FinTrack.ViewModels"
             xmlns:conv="clr-namespace:Fintrack.Assets.Converter"
             x:Class="FinTrack.Views.Components.SignUp"
             x:DataType="vm:SignUpViewModel">
    
    <UserControl.Resources>
        <conv:BoolToPasswordCharConverter x:Key="BoolToPasswordCharConverter"/>
    </UserControl.Resources>

    <Border
        Width="360"
        CornerRadius="20"
        Padding="30"
        Background="#1F2937CC"
        BoxShadow="0 0 40 0 #00000080">

        <Grid>
            <!-- Linhas do Grid: conteúdo principal e botão de login -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/> <!-- Conteúdo rolável -->
                <RowDefinition Height="Auto"/> <!-- Botão de login fixo -->
            </Grid.RowDefinitions>

            <!-- Conteúdo rolável -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="10">

                    <!-- Logo e título -->
                    <Image Source="avares://FinTrack/Assets/Images/FinTrack Dark Mode (1).png"
                           HorizontalAlignment="Center"
                           Width="320"
                           Margin="0,-30,50,-50"
                           Opacity="0.9"/>

                    <TextBlock 
                        Text="Cadastro"
                        FontSize="26"
                        Foreground="White"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"/>

                    <TextBlock
                        Text="Digite as informações corretamente"
                        FontSize="14"
                        Foreground="#9CA3AF"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"/>

                    <!-- Campos de cadastro -->
                    <StackPanel>
                        <TextBlock Text="Nome" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,0"/>
                        <TextBox Text="{Binding Nome, Mode=TwoWay}" 
                                 Watermark="Digite o seu nome"
                                 Foreground="Black"
                                 CornerRadius="8"
                                 BorderBrush="Transparent"
                                 Margin="0,0,0,8"
                                 Padding="8"/>

                        <TextBlock Text="Email" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,0"/>
                        <TextBox Text="{Binding Email, Mode=TwoWay}"
                                 Watermark="Digite o seu email"
                                 Foreground="Black"
                                 CornerRadius="8"
                                 BorderBrush="Transparent"
                                 Margin="0,0,0,8"
                                 Padding="8"/>

                        <TextBlock Text="Senha" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,0"/>
                        <Grid>
                            <TextBox x:Name="CaixaSenha"
                                     Text="{Binding Senha, Mode=TwoWay}"
                                     Watermark="Digite a sua senha"
                                     Foreground="Black"
                                     CornerRadius="8"
                                     BorderBrush="Transparent"
                                     Padding="8"
                                     Margin="0,0,0,10"
                                     PasswordChar="{Binding SenhaVisivel, Converter={StaticResource BoolToPasswordCharConverter}}"/>

                            <Button Width="30"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,10"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="VisualizarSenha"
                                    Focusable="False"
                                    Padding="0">
                                <Button.Styles>
                                    <Style Selector="Button:pressed">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>
                                </Button.Styles>

                                <Image x:Name="SenhaIcon"
                                       Source="avares://FinTrack/Assets/Images/olho_fechado.png"
                                       Width="24"
                                       Height="24"/>
                            </Button>
                        </Grid>

                        <TextBlock Text="Confirmar senha" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,0"/>
                        <Grid>
                            <TextBox x:Name="ConfirmarCaixaSenha"
                                     Text="{Binding ConfirmarSenha, Mode=TwoWay}"
                                     Watermark="Digite a mesma senha anterior"
                                     Foreground="Black"
                                     CornerRadius="8"
                                     BorderBrush="Transparent"
                                     Padding="8"/>

                            <Button Width="30"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="ConfirmarVisualizarSenha"
                                    Focusable="False"
                                    Padding="0">
                                <Button.Styles>
                                    <Style Selector="Button:pressed">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>
                                </Button.Styles>

                                <Image x:Name="ConfirmarSenhaIcon"
                                       Source="avares://FinTrack/Assets/Images/olho_fechado.png"
                                       Width="24"
                                       Height="24"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Mensagem de status -->
                    <TextBlock Text="{Binding MensagemStatusCadastro}"
                               Foreground="{Binding MensagemStatusCor}"
                               HorizontalAlignment="Center"/>

                    <!-- Botão de cadastro -->
                    <Button Content="Cadastrar"
                            Command="{Binding CadastroCommand}"
                            HorizontalContentAlignment="Center"
                            Background="#4F46E5"
                            Foreground="White"
                            FontWeight="SemiBold"
                            CornerRadius="8"
                            Padding="12"
                            Width="100"
                            HorizontalAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#6366F1"/>
                            </Style>
                        </Button.Styles>
                    </Button>

                </StackPanel>
            </ScrollViewer>

            <!-- Botão de voltar para Login -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Spacing="4">
                <TextBlock Text="Tem uma conta?" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                <Button Command="{Binding NavegarParaLogin}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="0"
                        Cursor="Hand"
                        VerticalAlignment="Center">
                    <TextBlock Text="Faça seu Login"
                               Foreground="#4F46E5"
                               TextDecorations="Underline"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
